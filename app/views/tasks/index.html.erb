
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
<ul>
  <% @tasks.each do |task| %>
  　<li><%= link_to task.id, task %> <!--showにつながる-->
  　: 
  　<%= task.status %>
  　&gt;
  　<%= task.content %>
  　</li>
  <% end %>
</ul>

<%= link_to '新規タスクの投稿', new_task_path %>　<!--newアクションにつながる-->
<%= link_to 'Logout', logout_path, method: :delete %>

<% else %>
  <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', new_user_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login!', login_path, class: 'btn btn-lg btn-primary' %>
<% end %>

