
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
<ul>
  <% @tasks.each do |task| %>
  　<li><%= link_to task.id, task %> <!--showにつながる-->
  　: 
  　<%= task.status %>
  　&gt;
  　<%= task.content %>
  　</li>
  <% end %>
</ul>

<%= link_to '新規タスクの投稿', new_task_path %>　<!--newアクションにつながる-->
<%= link_to 'Logout', logout_path, method: :delete %>

<% end %>

